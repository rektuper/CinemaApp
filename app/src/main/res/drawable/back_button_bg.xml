<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Затемнение вокруг -->
  <item>
    <shape android:shape="oval">
      <solid android:color="#33000000"/>  <!-- Полупрозрачный черный -->
      <size android:width="40dp" android:height="40dp"/>
    </shape>
  </item>

  <!-- Белый круг -->
  <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
    <shape android:shape="oval">
      <solid android:color="#111111"/>  <!-- Белый фон -->
      <stroke android:width="1dp" android:color="#11000000"/>  <!-- Легкая обводка -->
    </shape>
  </item>

  <!-- Ripple-эффект -->
  <item>
    <ripple android:color="#22000000">  <!-- Эффект при нажатии -->
      <item android:id="@android:id/mask">
        <shape android:shape="oval">
          <solid android:color="#FFFFFF"/>
        </shape>
      </item>
    </ripple>
  </item>
</layer-list>
